            max-width: 400px; /* Adicionado limite de largura */
            padding: 20px;
        }

        .task-list {
            list-style-type: none;
            padding: 0;
        }

        .task {
            display: flex;
            align-items: center;
            justify-content: space-between;
            border-bottom: 1px solid #ddd;
            padding: 10px 0;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .task.completed {
            background-color: #27ae60; /* Verde */
            color: #fff;
        }

        .task.todo {
            background-color: #f39c12; /* Amarelo */
            color: #fff;
        }

        .task-text {
            font-weight: bold;
            text-align: center; /* Centraliza o texto */
            margin-left: 10px; /* Adiciona espaço ao lado esquerdo */
        }

        .status {
            font-size: 12px;
            margin-left: 10px; /* Adiciona espaço entre o nome e o status */
        }

